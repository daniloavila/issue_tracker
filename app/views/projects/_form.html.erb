<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
     	<h2>
			<% if @project.errors.count == 1 %> 
				<%= t('activerecord.errors.template.header.one', :model => @project.class.human_name) %>
			<% else %>
				<%= t('activerecord.errors.template.header.other', :model => @project.class.human_name,:count => @project.errors.size)%>	
			<% end %>
		</h2>
      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
